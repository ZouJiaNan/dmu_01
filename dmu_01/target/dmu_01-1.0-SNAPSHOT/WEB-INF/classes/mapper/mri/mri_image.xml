<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.casit.dmu_1.mapper.mri.Mri_imageMapper">
    <insert id="add" useGeneratedKeys="true" keyProperty="id" parameterType="Mri_image">
        insert into mri_image value(null,#{patient_id}, #{mri_record_id});
    </insert>
    <delete id="delete" parameterType="Integer">
        delete from mri_image where id=#{image_id};
    </delete>
    <select id="query" parameterType="Integer" resultType="Integer">
        select id from mri_image where mri_record_id=#{record_id};
    </select>
</mapper>